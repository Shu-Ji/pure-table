{
    "scripts": {
        "dev": "snowpack dev",
        "build": "npm-run-all -p build:snowpack build:declarations",
        "build:snowpack": "snowpack build",
        "build:declarations": "tsc --declaration --emitDeclarationOnly --declarationDir dist/pure-table",
        "test": "web-test-runner \"src/**/*.test.tsx\"",
        "format": "prettier --write \"src/**/*.{js,jsx}\"",
        "lint": "prettier --check \"src/**/*.{js,jsx}\""
    },
    "dependencies": {
        "preact": "^10.5.11",
        "rc-table": "^7.12.3",
        "react-resizable": "^1.11.0"
    },
    "devDependencies": {
        "@prefresh/snowpack": "^3.0.0",
        "@snowpack/plugin-postcss": "^1.1.0",
        "@snowpack/plugin-typescript": "^1.2.0",
        "@types/react-resizable": "^1.7.2",
        "cssnano": "^4.1.10",
        "husky": "^4.3.8",
        "lint-staged": "^10.2.2",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.2.4",
        "postcss-cli": "^8.3.1",
        "postcss-preset-env": "^6.7.0",
        "prettier": "^2.0.5",
        "snowpack": "^3.0.1",
        "snowpack-plugin-less": "^1.0.5",
        "typescript": "^4.0.3"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "eslint --fix"
        ]
    }
}
