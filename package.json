{
    "scripts": {
        "dev": "snowpack dev",
        "build": "npm-run-all build:snowpack build:declarations",
        "build:snowpack": "snowpack build",
        "build:declarations": "tsc --declaration --emitDeclarationOnly --declarationDir build/dist",
        "test": "web-test-runner \"src/**/*.test.tsx\"",
        "format": "prettier --write \"src/**/*.{js,jsx}\"",
        "lint": "prettier --check \"src/**/*.{js,jsx}\""
    },
    "dependencies": {
        "preact": "^10.5.11"
    },
    "devDependencies": {
        "@prefresh/snowpack": "^3.0.0",
        "@snowpack/plugin-typescript": "^1.2.0",
        "husky": "^4.3.8",
        "lint-staged": "^10.2.2",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.0.5",
        "snowpack": "^3.0.1",
        "typescript": "^4.0.3"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts}": [
            "eslint --fix"
        ]
    }
}
